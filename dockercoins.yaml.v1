apiVersion: apps/v1
kind: Deployment
metadata:
  name: webui
  labels:
    app: dockercoins
    tier: front
    environment: prod
spec:
  replicas: 1
  selector:
    matchLabels:
      app: dockercoins
      tier: front
  template:
    metadata:
      labels:
        app: dockercoins
        tier: front
        environment: prod
    spec:
      containers:
        - name: webui
          image: brahimhamdi/webui
---
apiVersion: v1
kind: Service
metadata:
  name: webui
  labels:
    app: dockercoins
    tier: front
    environment: prod
spec:
  selector:
    app: dockercoins
    tier: front
  type: NodePort
  ports:
    - protocol: TCP
      port: 80
      targetPort: 80
      nodePort: 30080
---
